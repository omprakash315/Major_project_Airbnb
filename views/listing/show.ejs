<% layout("/layout/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3><b><%= listing.title %></b></h3>
        </div>
        <div class="col-6 offset-2">
            <div class="card">
                <img src=<%= listing.image.url %>  class="card-img-top" alt="listing image" style="height: 30vh;">
                <div class="card-body">
                <p class="card-text">
                    <%= listing.description %> <br>
                    &#8377 <%= listing.price.toLocaleString("en-IN") %> /night <br>
                    <%= listing.location %> , <%= listing.country %>
                </p>
                </div>
            </div>
        </div>
    </div>

    <div class="show-btn mb-4">
        <button class="btn btn-dark edit-btn offset-4"><a href="/listings/<%= listing._id %>/edit" class="a-btn">Edit</a></button>
        <form method="post" action="/listings/<%= listing._id %>?_method=delete">
            <button class="btn btn-dark offset-4">Delete</button>
        </form>
    </div>
</body>
