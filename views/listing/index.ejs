<% layout("/layout/boilerplate.ejs") %>
<%= success %>
<body>
    <h3>All List</h3>
    <h1><% currUser %></h1>
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
        <% for(let list of allListings){ %>
            <a href="/listings/<%= list._id %>" class="listing-link">
                <div class="card col" style="width: 20rem;">
                    <img src=<%= list.image.url %> class="card-img-top" alt="list.title" style="height: 20rem;">
                    
                    <div class="card-body">
                        <p class="card-text">
                        <b><%= list.title %></b>
                        <br>
                        &#8377 <%= list.price.toLocaleString("en-IN") %> /night
                        <br>
                        <%= list.location %>,
                        <%= list.country %>
                        </p>
                        
                    </div>
                </div>
            </a>
        <% } %>
    </div>
    
    
</body>
